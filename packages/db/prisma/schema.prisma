generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Contact {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  outreaches Outreach[]
}

model Outreach {
  id        String    @id @default(cuid())
  contactId String
  // channel: "EMAIL" | "SMS"
  // status:  "PENDING" | "SENT" | "FAILED" | "REPLIED"
  // Stored as String here for SQLite compatibility.
  // Valid values are enforced by Zod in the API layer and typed in @crm/types.
  // When migrating to PostgreSQL, these become native enum columns â€” see MIGRATION.md.
  channel   String
  status    String    @default("PENDING")
  subject   String?
  body      String
  sentAt    DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  contact Contact @relation(fields: [contactId], references: [id], onDelete: Cascade)
}
